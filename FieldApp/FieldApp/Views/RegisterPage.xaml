<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FieldApp.Views.RegisterPage">
    <ContentPage.Content>

        <StackLayout x:Name="containerStacklayout" VerticalOptions="Start" Margin="40">
            <Entry x:Name="emailEntry"
                   Placeholder="Enter Email Address" 
                   Keyboard="Email"
                   Text="{Binding Email, Mode=TwoWay}"/>
            <Entry x:Name="passwordEntry" 
                   Placeholder="Enter Password" 
                   IsTextPredictionEnabled="False"
                   Text="{Binding Password, Mode=TwoWay}"/>
            <Entry x:Name="confirmPasswordEntry" 
                   Placeholder="Confirm Password" 
                   IsTextPredictionEnabled="false"
                   Text="{Binding ConfPassword, Mode=TwoWay}"/>

            <!--<Button x:Name="registerButton" Text="Register" Clicked="registerButton_Clicked"/>-->
            <Button x:Name="registerButton" Style="{StaticResource blueButton}" Text="Submit" 
            Command="{Binding RegisterUserCommand}" 
            CommandParameter="{Binding User}"/>

            <!--<Button  x:Name="backButton" Text="Back"   Style="{StaticResource greyButton}"
            Command="{Binding RegisterUserCommand}" />-->


        </StackLayout>
    </ContentPage.Content>
</ContentPage>